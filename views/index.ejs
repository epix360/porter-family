<% layout('/layouts/boilerplate') %>
<main>
  <section>
    <div class="text-center">
      <img src="/img/familyprofile.webp" class="img-thumbnail" width="900" alt="">
      <div class="my-5">
        <h2>Our story</h2>
        <p class="h3">well underway and only beginning</p>
        <p>
          Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ducimus illo
          corporis libero maiores, quasi error nostrum earum laboriosam dicta
          laudantium quod quaerat accusamus quia pariatur. Quod doloremque dolor
          ratione vero?
        </p>
      </div>
    </div>
  </section>
  <section>
    <div class="row text-center">
      <% for (profile of profiles) { %>
        <div class="col-sm-6 col-md position-relative my-3">
          <h2>
            <%= profile.name %>
          </h2>
          <img src="<%= profile.image %>" class="img-thumbnail profile-img" alt="" />
          <a href="/family-member/<%= profile.pname %>/" class="btn btn-primary stretched-link mt-3">Meet <%= profile.name %></a>
        </div>
        <% } %>
    </div>
  </section>
</main>