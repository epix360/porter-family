<% layout('/layouts/boilerplate') %>
    <h2 class="h1">
        Create a profile
    </h2>
    <form id="newBioForm" action="/family-member/new" method="POST" novalidate class="needs-validation"
        enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="name" aria-describedby="name" required>
                    <input type="hidden" id="pname" name="pname">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" aria-describedby="username"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password"
                        aria-describedby="password" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" class="form-label" for="age">Age</label>
                    <input class="form-control" type="number" id="age" name="age" aria-describedby="age" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="job">Occupation</label>
                    <input class="form-control" type="string" name="job" id="job" spellcheck="true"
                        aria-describedby="job" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload profile picture</label>
                    <input class="form-control" name="image" type="file" id="image" required>
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label" for="bio">Bio</label>
                <input type="hidden" id="imageIds" name="imageIds">
                <input type="hidden" name="bio" id="bio" aria-describedby="bio" required>
                <div id="editor-container" class="editor-container" style="max-height: 350px;"></div>

            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Create Profile</button>
            </div>
        </div>
    </form>
    <a href="/family-member">Cancel</a>
    </div>
    <script>
        const name = document.getElementById('name');
        const pname = document.getElementById('pname')
        name.addEventListener("change", updateValue);

        function updateValue(e) {
            pname.value = e.target.value.trim().toLowerCase().replace(/\s+/g, '-').normalize('NFKD').replace(/[^\w\s.\-_\/]/g, '');
            console.log(pname)
        }
    </script>
    <script type="module" src="/js/bio-editor.js"></script>