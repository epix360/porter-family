<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h2 class="h1"><%=profile.name%>'s Blog</h2>
        <h3>Write a new blog post</h3>
        <div class="col-6 offset-3">
            <form action="/family-member/<%=profile._id%>/blog" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="blogPost[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="content">Content</label>
                    <textarea class="form-control" type="text" id="image" name="blogPost[content]"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Post</button>
                </div>
                <a href="/family-member/<%=profile._id%>/blog">All Posts</a>
            </form>
        </div>
    </div>