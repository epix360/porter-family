<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <h2 class="h1">Edit post</h2>
            <form id="editPostForm" action="/family-member/<%=profile.pname%>/blog/<%=blogPost.slug%>?_method=PUT"
                method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="title"
                        value="<%=blogPost.title%>" aria-describedby="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="content">Content</label>
                    <input type="hidden" id="blogPostImage" name="blogPost[blogPostImage]">
                    <input type="hidden" id="content" name="content" aria-describedby="content" required>
                    <div id="edit-post-editor" class="form-control editor-container"><%-blogPost.content%></div>
                </div>
                <button type="submit" class="btn btn-success mb-3">Submit</button>
            </form>
            <a href="/family-member/<%=profile.pname%>/blog/<%= blogPost.slug %>">Cancel</a>
        </div>
    </div>
    <script type="text/javascript" src="/js/editPostQuillInit.js"></script>