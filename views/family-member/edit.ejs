<%- include('../partials/head') %>
  <%- include('../partials/header') %>
    <h2 class="h1">Edit profile</h2>
    <form action="/family-member/<%= profile._id %>?_method=PUT" method="POST">
      <div class="row">
        <div class="col">
          <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" name="name" id="name" placeholder="name" spellcheck="true"
              value="<%= profile.name %>">
          </div>
          <div class="mb-3">
            <label class="form-label" for="age">Age</label>
            <input class="form-control" type="number" name="age" id="age" placeholder="age" value="<%= profile.age %>">
          </div>
          <div class="mb-3">
            <label class="form-label" for="job">Occupation</label>
            <input class="form-control" type="string" name="job" id="job" placeholder="job" spellcheck="true"
              value="<%= profile.job %>">
          </div>
          <div class="mb-3">
            <label class="form-label" for="image">Image path</label>
            <input class="form-control" type="text" name="image" id="image" placeholder="image path"
              value="<%= profile.photoUrl %>">
          </div>
        </div>
        <div class="col">
            <label class="form-label" for="bio">Bio</label>
            <input type="hidden" name="bio" id="bio">
          <div id="editor-container"><%- profile.bio %></div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a href="/family-member/<%= profile._id %>">Cancel</a>
    <%- include('../partials/footer') %>